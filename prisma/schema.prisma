generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  companyName    String
  email          String         @unique
  hashedPassword String
  serviceState   String
  serviceStates  String[]       @default([]) // extra states user serves
  roles          UserRole[]     @default([USER])
  city           String[]
  dncList        String? // Do Not Call list: raw text, one entry per line
  dncListFileUrl String? // Cloudinary URL of uploaded DNC file (PDF, etc.)
  verifications  Verification[]
}

model Message {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName          String
  lastName           String
  email              String
  company            String
  serviceArea        String
  termsAndConditions Boolean
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Verification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
}

model Lead {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // Basic Info
  title        String
  location     String
  city         String?
  state        String?
  facilityType String?

  // Lead Evaluation
  leadQuality           LeadQuality
  opportunityLevel      String?
  conversionProbability String?

  // Cleaning Situation
  cleaningStatus   String?
  currentHelp      String?
  desiredFrequency String?
  decisionMaker    String?
  primaryContact   String?

  // Facility Snapshot
  upstairsRooms         Int?
  downstairsDescription String?
  hasConferenceRooms    Boolean?
  hasPrivateOffices     Boolean?

  // Walkthrough
  walkthroughScheduled Boolean   @default(false)
  walkthroughDate      DateTime?
  walkthroughNotes     String?

  // Buying Signals & Risks (stored as arrays)
  buyingSignals String[]
  riskFactors   String[]

  // Financial Potential
  estimatedMinValue Int?
  estimatedMaxValue Int?

  // Analysis
  opportunityAnalysis String?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum LeadQuality {
  LOW
  MODERATE
  HIGH
}

model BlogPost {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  slug            String   @unique
  content         String
  featuredImage   String?
  contentHtml     String
  metaDescription String? // SEO meta description / excerpt
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model NewsletterSubscriber {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  createdAt DateTime @default(now())
}

model Contact {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  companyName     String
  email           String
  contactNumber   String
  serviceZipCodes String
  dncList         String?
  createdAt       DateTime @default(now())
}
