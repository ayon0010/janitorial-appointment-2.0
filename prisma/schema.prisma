generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  companyName    String
  email          String     @unique
  hashedPassword String
  serviceState   String
  roles          UserRole[] @default([USER])
  city           String[]
}

model Message {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName          String
  lastName           String
  email              String
  company            String
  serviceArea        String
  termsAndConditions Boolean
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
