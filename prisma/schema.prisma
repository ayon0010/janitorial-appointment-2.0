generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName      String
  lastName       String
  email          String   @unique
  hashedPassword String
  companyName    String
  role           Role     @default(USER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Message {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName          String
  lastName           String
  email              String
  company            String
  serviceArea        String
  termsAndConditions Boolean
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
